@{
}



@*-------------------------------*@

<form method="post">
    <div class="border p-3 mt-4 container  align-self-center " style="width:40%; border-color:orange">

        <div class="p-3 mt-4 container align-self-center">
            @if(ViewBag.UserName == "UserName already Exist")
            {
                <p class="text-danger">UserName already exist</p>
            }
            @if(ViewBag.Email == "Email already Exist")
            {
                <p class="text-danger">Email already exist</p>
            }
             <div style="display: flex; justify-content: flex-start; flex-direction:row; align-items: center">
                    <h3 style="margin-right:220px">Sign up</h3>
                     <img src="https://res.cloudinary.com/swiggy/image/upload/fl_lossy,f_auto,q_auto/Image-login_btpq7r" style="left:50px ; height:60px;width:60px"/>
                 </div>
            <br />
            <div class="mb-3">
                @*<label asp-for="UserName"></label>*@
                <input asp-for="UserName" placeholder="User Name" class="form-control" style="width:100%"/>
            </div>

             <div class="mb-3">
                @*<label asp-for="Email"></label>*@
                <input asp-for="Email" placeholder="Email" class="form-control" style="width:100%"/>
            </div>

             <div class="mb-3">
                @*<label asp-for="Password"></label>*@
                <input asp-for="Password" placeholder="Password" class="form-control" type="password" style="width:100%"/>
            </div>

            <button type="submit" class="btn" style="width:100%;background-color:orange ">Create</button>

            <p>Already have an account ?<a asp-controller="FoodSite" asp-action="Login" class="text-danger"> Login</a></p>

        </div>

      
        
    </div>

</form>